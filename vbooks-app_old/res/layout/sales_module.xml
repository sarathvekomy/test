<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true" >

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <!-- Delivery Note start -->

            <RelativeLayout
                android:id="@+id/rlDeliveryNoteView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="40dp" >

                <include
                    android:id="@+id/custlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    layout="@layout/custmour_list_view" />

                <Button
                    android:id="@+id/btnDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:text="@string/generateInvoice"
                    android:textColor="#ffffff" />
            </RelativeLayout>
            <!-- Delivery Note End -->


            <!-- Re Payments start -->


            <!--
                 <RelativeLayout
                android:id="@+id/rlpaymentview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="40dp" >

                <include
                    android:id="@+id/custlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    layout="@layout/custmour_list_view" />

                <Button
                    android:id="@+id/btnPayment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:text="@string/payment"
                    android:textColor="#ffffff" />
            </RelativeLayout>
            -->


            <!-- Re Payments End -->


            <!-- Stock return start -->


            <!--
                 <RelativeLayout
                android:id="@+id/rlStockreturnView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="40dp" >

                <include
                    android:id="@+id/custlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    layout="@layout/custmour_list_view" />

                <Button
                    android:id="@+id/btnSalereturn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:text="@string/salereturn"
                    android:textColor="#ffffff" />
            </RelativeLayout>
            -->
            <!-- Stock return start -->


            <!-- Modify Custmour start -->

            <LinearLayout
                android:id="@+id/llModifyCustView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="40dp"                
                android:weightSum="10" 
                android:visibility="gone">

                <LinearLayout
					android:id="@+id/ModifyCust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="horizontal" >
                </LinearLayout>                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:orientation="horizontal" >
                    <Button
                        android:id="@+id/btnUpdate"
                    	android:layout_width="match_parent"
                    	android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:text="@string/update"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
            <!-- Modify Custmour End -->


            <!-- New Custmour start -->

            <LinearLayout
                android:id="@+id/llAddCustView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:paddingTop="40dp"
                android:weightSum="10" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    android:orientation="horizontal" >

                    <include
                        android:id="@+id/addCust"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        layout="@layout/add_custmour_view" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.9"
                    android:orientation="horizontal"
                    android:weightSum="10" >

                    <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="4.9"
                        android:text="@string/submit"
                        android:textColor="#ffffff" />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="4.9"
                        android:text="@string/clear"
                        android:textColor="#ffffff" />
                </LinearLayout>
            </LinearLayout>
            <!-- New Custmour End -->

        </FrameLayout>
    </TabHost>

</RelativeLayout>