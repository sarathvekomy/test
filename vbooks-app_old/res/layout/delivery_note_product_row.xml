<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_bg"
    android:orientation="vertical" >
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_stroke_bg"
        android:weightSum="10" >

        <TextView
            android:id="@+id/lblProductName"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblAvailableQty"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblProductCost"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txProductQty"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@drawable/border"
            android:gravity="top|center_horizontal"
            android:inputType="number"
            android:maxLength="10"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/txbonusQty"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@drawable/border"
            android:gravity="top|center_horizontal"
            android:inputType="number"
            android:maxLength="5"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lblTotalCost"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/txbonusReason"
            android:layout_width="200dp"
            android:layout_height="fill_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:background="@drawable/border"
            android:gravity="top|center_horizontal"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>