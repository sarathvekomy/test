<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <gradient android:angle="270" android:endColor="#9ccfa1" android:startColor="#A5B8DA" />

            <stroke android:width="4dp" android:color="#282a2f" />

            <corners android:radius="25dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>        
	</item>
    <item>
        <shape>
            <gradient android:angle="270" android:centerColor="#A5B8DA" android:endColor="#A5B8DF" android:startColor="#485F89" />
	
            <stroke android:width="4dp" android:color="#282a2f" />

            <corners android:radius="25dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape>        
	</item>
</selector>