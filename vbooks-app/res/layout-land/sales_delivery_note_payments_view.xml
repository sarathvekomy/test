<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/llpaymentsInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/grid_border_blue"
                android:orientation="vertical"
                android:padding="10dp" >

                <TableRow
                    android:id="@+id/tr1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dip"
                    android:weightSum="10" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:drawableLeft="@drawable/credit"
                        android:drawablePadding="5dp"
                        android:text="@string/previous_credit"
                        android:textColor="@color/background"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/colon"
                        android:textColor="@color/background" />

                    <TextView
                        android:id="@+id/lblpreviouscredit"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/background"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tr1"
                    android:layout_margin="5dip"
                    android:weightSum="10" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:drawableLeft="@drawable/product_cost"
                        android:drawablePadding="5dp"
                        android:gravity="left"
                        android:text="@string/present_payable"
                        android:textColor="@color/background"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/colon"
                        android:textColor="@color/background" />

                    <TextView
                        android:id="@+id/lblPresentPayable"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/background"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr3"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tr2"
                    android:layout_margin="5dip"
                    android:weightSum="10" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:drawableLeft="@drawable/advance"
                        android:drawablePadding="5dp"
                        android:text="@string/previous_advance"
                        android:textColor="@color/background"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/colon"
                        android:textColor="@color/background" />

                    <TextView
                        android:id="@+id/lbladvance"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/background"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tr3"
                    android:layout_margin="5dip"
                    android:weightSum="10" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.5"
                        android:drawableLeft="@drawable/product_total_cost"
                        android:drawablePadding="5dp"
                        android:gravity="left"
                        android:text="@string/total_payable"
                        android:textColor="@color/background"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:id="@+id/lblTotoalPayableAdv"
                        android:layout_width="0dip"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/adv"
                        android:textColor="@color/orange" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/colon"
                        android:textColor="@color/background" />

                    <TextView
                        android:id="@+id/lblTotalPayment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:textColor="@color/background"
                        android:textStyle="bold"
                        android:typeface="sans" />
                </TableRow>

                <TableRow
                    android:id="@+id/tr6"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tr4"
                    android:layout_margin="5dip"
                    android:weightSum="10" >

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="4.5"
                        android:drawableLeft="@drawable/payment"
                        android:drawablePadding="5dp"
                        android:text="@string/present_payment"
                        android:textColor="@color/background"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight=".3"
                        android:text="@string/colen_sigin"
                        android:textColor="@color/background"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/txPaymentnow"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="3"
                        android:background="@drawable/txt_box_boarder"
                        android:gravity="left|center"
                        android:hint="@string/payment"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="4dp"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/cmbPaymentType"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:background="@drawable/drop_down_icon"
                        android:drawSelectorOnTop="true" />
                </TableRow>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dynamicRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="115dp"
            android:layout_marginRight="115dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/grid_border_blue"
            android:orientation="vertical" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="1" >

                <EditText
                    android:id="@+id/txChequeNo"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight=".5"
                    android:background="@drawable/txt_box_boarder"
                    android:drawableLeft="@drawable/cheque"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:hint="@string/cheque"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txBankName"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:background="@drawable/txt_box_boarder"
                    android:drawableLeft="@drawable/bank_name"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:hint="@string/bank"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:weightSum="1" >

                <EditText
                    android:id="@+id/txBranchName"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:background="@drawable/txt_box_boarder"
                    android:drawableLeft="@drawable/bank_name"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:hint="@string/account_no"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <EditText
                    android:id="@+id/txBranchLoc"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_weight=".5"
                    android:background="@drawable/txt_box_boarder"
                    android:drawableLeft="@drawable/location_icon"
                    android:drawablePadding="5dp"
                    android:gravity="left|center"
                    android:hint="@string/branch_location"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:maxLength="20"
                    android:padding="5dp"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >
            </LinearLayout>

            <TableRow
                android:id="@+id/tr7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="7"
                android:background="@drawable/grid_border_blue"
                android:padding="5dp"
                android:weightSum="10" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3.5"
                    android:drawableLeft="@drawable/balance"
                    android:drawablePadding="5dp"
                    android:text="@string/remaining_bal"
                    android:textColor="@color/background"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/lblBalAdv"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/adv"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".3"
                    android:text="@string/colen_sigin"
                    android:textColor="@color/background"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblRemaingBal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="5"
                    android:text="@string/zero"
                    android:textColor="@color/background"
                    android:textStyle="bold"
                    android:typeface="sans" />
            </TableRow>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.5" >
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>