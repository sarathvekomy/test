<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_border_blue"
    android:orientation="vertical"
    android:weightSum="10" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="2dp"
        android:background="@android:drawable/arrow_up_float" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:gravity="center"
        android:text="@string/remarks"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_margin="2dp"
        android:background="@android:drawable/arrow_up_float" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:weightSum="10" >

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:background="@drawable/txt_box_boarder_yellow"
            android:gravity="center"
            android:hint="@string/description"
            android:inputType="none"
            android:imeOptions="actionDone"
            android:lines="5"
            android:padding="5dp"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:id="@+id/viewnewDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="4"
        android:gravity="center"
        android:visibility="visible"
        android:weightSum="10" >

        <EditText
            android:id="@+id/txtnewDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.5"
            android:background="@drawable/txt_box_boarder_yellow"
            android:gravity="center"
            android:hint="@string/description"
            android:inputType="none"
            android:imeOptions="actionDone"
            android:lines="5"
            android:padding="5dp"
            android:textColor="@color/background"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="10dp"
        android:layout_weight="1.5"
        android:gravity="center"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnremarksSave"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:text="@string/save"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnremarksCancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:text="@string/cancel"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>