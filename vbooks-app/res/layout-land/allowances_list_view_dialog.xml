<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_border_blue"
    android:orientation="vertical"
    android:weightSum="10" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@android:drawable/arrow_up_float" />

    <TextView
        android:id="@+id/allownacname"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="top"
        android:layout_margin="2dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:text="@string/allowances_details"
        android:textColor="@android:color/darker_gray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@android:drawable/arrow_up_float" />

    <ListView
        android:id="@+id/listAllownacesShow"
        android:layout_width="match_parent"
        android:layout_height="0dp"        
        android:layout_weight="8.5" >
    </ListView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnAllowncesOk"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:text="@string/ok"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>