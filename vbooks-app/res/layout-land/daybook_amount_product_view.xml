    <View
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="@android:drawable/arrow_down_float" />
    <!-- DayBook Product Displaying Start -->

    <TableRow
        android:id="@+id/trHeaderDaybookProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/bluegradient"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:text="@string/productName"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.5"
            android:gravity="center|center_horizontal"
            android:text="@string/batchNo"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="Opening Stock"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="@string/return_qty"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="Product To Customer"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|center"
            android:text="Products To Factory"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:inputType="none"
            android:text="Closeing Stock"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </TableRow>

    <ListView
        android:id="@+id/lvDaybookProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="57"
        android:cacheColorHint="@android:color/transparent"
        android:divider="@null"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:scrollingCache="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/llProductsBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="12"
        android:background="@drawable/grid_border_yellow"
        android:gravity="center"
        android:padding="2dp"
        android:visibility="visible"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnDBPaymentClose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="0.15"
            android:background="@drawable/back"
            android:gravity="left" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnPreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/preview"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>