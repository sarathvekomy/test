<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/grid_border_blue"
    >
    <View  android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:drawable/arrow_up_float"
       android:layout_margin="2dp"	
        />
	
    <TextView
            
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:gravity="center"
            android:layout_margin="3dp"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />
    <View  android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@android:drawable/arrow_up_float"
        android:layout_margin="2dp"
        />
    
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="10" >

        <TextView
            android:id="@+id/lblexpensegive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="Old Password"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold" />
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/colen_sigin"
            android:layout_weight=".5"
            android:textStyle="bold"
            android:textSize="15sp"
             android:textColor="@color/background"
            />

        <EditText
            android:id="@+id/txtOldPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:inputType="textPassword"
            android:background="@drawable/edittext_boarder_normal"
            android:maxLength="25"
            android:imeOptions="actionDone"
            />
    </TableRow>

     <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="10" >

        <TextView
           
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:text="New Password"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold" />
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/colen_sigin"
            android:layout_weight="0.5"
            android:textStyle="bold"
             android:textColor="@color/background"
            />

        <EditText
            android:id="@+id/txtNewPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:padding="5dp"
            android:background="@drawable/edittext_boarder_normal"
            android:maxLength="25"
            android:imeOptions="actionDone"
            />
    </TableRow>
     <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="10" >

        <TextView
            
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.4"
            android:text="Confirm Password"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:gravity="left"
            android:textStyle="bold" />
        <TextView android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/colen_sigin"
            android:layout_weight="0.5"
            android:textStyle="bold"
             android:textColor="@color/background"
            />

        <EditText
            android:id="@+id/txtConfirmPwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="15sp"
            android:layout_margin="2dp"
            android:background="@drawable/edittext_boarder_normal"
            android:inputType="textPassword"
            android:padding="5dp"
            android:maxLength="25"
            android:imeOptions="actionDone"
            />
    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnSavePwd"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:text="@string/save"
            android:textColor="@drawable/text_color_selection"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
             />

        <Button
            android:id="@+id/btnCancelPwd"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".2"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_blue"
            android:text="@string/cancel"
            android:textColor="@drawable/text_color_selection" />
    </TableRow>

</LinearLayout>