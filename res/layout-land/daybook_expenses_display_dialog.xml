<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grid_border_blue"
    android:orientation="vertical" >

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="10" >

        <TextView
            android:id="@+id/lblexpensegive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:gravity="left"
            android:text="Previous IP Address"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:weightSum="10" >

        <EditText
            android:id="@+id/txtexpensegive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:background="@drawable/txt_box_boarder_yellow"
            android:imeOptions="actionDone"
            android:inputType="none"
            android:padding="5dp"
            android:textSize="15sp" />
    </TableRow>

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnFuelCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".3"
            android:background="@drawable/button_blue"
            android:text="@string/cancel"
            android:textColor="@drawable/text_color_selection"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnFuelSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_weight=".3"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@drawable/text_color_selection"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>