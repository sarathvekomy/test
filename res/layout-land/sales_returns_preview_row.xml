<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/table_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_stroke_bg"
        android:weightSum="1" >

        <TextView
            android:id="@+id/lblSRProductNamePreview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight=".3"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSRBatchNoPreview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight=".2"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSRDamagedQtyPreview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight=".15"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSRReSaleQtyPreview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight=".15"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/lblSRTotalQtyPreview"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight=".20"
            android:background="@color/table_bg"
            android:ellipsize="end"
            android:gravity="top|center_horizontal"
            android:textColor="@color/black"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>