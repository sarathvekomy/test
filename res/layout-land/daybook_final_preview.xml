<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" >

    <View
        android:layout_width="match_parent"
        android:layout_height="3dip"
        android:background="@android:drawable/arrow_up_float" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:weightSum="10" >

        <TextView
            android:id="@+id/lblSalesExecName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:drawableLeft="@drawable/day_book_sales_exe"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:textColor="@color/background"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:contentDescription="@string/app_name"
            android:src="@drawable/daybook_first" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="@string/Openingbalance"
            android:textColor="@color/background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="2dp"
            android:layout_weight=".1"
            android:gravity="left|center"
            android:text="@string/colon"
            android:textColor="@color/background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblOpeningBalanceView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="2"
            android:gravity="left|center"
            android:textColor="@color/background"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lblDaybookDatePreview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:layout_weight="1.5"
            android:drawableLeft="@drawable/calender"
            android:drawablePadding="5dp"
            android:gravity="left|center"
            android:textColor="@color/background"
            android:textSize="12sp"
            android:textStyle="bold" />
    </TableRow>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3dip"
        android:background="@android:drawable/arrow_up_float" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:background="@drawable/grid_border_blue"
        android:padding="2dp"
        android:stretchColumns="*"
        android:weightSum="100" >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:weightSum="100" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="14"
                android:gravity="left"
                android:text="@string/vehicalno"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txDBVehicalNoPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@null"
                android:gravity="left"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="15"
                android:gravity="left"
                android:text="@string/total_payable"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDBTotalPayablePreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="17"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:gravity="left"
                android:text="@string/totalreceived"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDBTotalreceviedPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_weight="16"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:weightSum="100" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="6.5"
                android:gravity="left"
                android:text="start ->"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txDBstartReadingPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="7.5"
                android:background="@null"
                android:gravity="left"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/dist_symbole"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txDBendReadingPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:background="@null"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:gravity="left"
                android:text="@string/end_symbole"
                android:textColor="@color/yellow"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="15"
                android:gravity="left"
                android:text="@string/amttobank"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDBamtToabankPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="17"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:gravity="left"
                android:text="@string/amttofactory"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txDBAmtToFactoryPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:background="@null"
                android:gravity="right"
                android:imeOptions="actionDone"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="33"
            android:weightSum="100" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_weight="14"
                android:gravity="left"
                android:text="@string/drivername"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/txDBDriverNamePreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="20"
                android:background="@null"
                android:gravity="left"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_weight="15"
                android:gravity="left"
                android:text="@string/toatal_allowance"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDBTotalAllowancePreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_weight="17"
                android:gravity="left"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="13"
                android:gravity="left"
                android:text="Closing Bal"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/colon"
                android:textColor="@color/background"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblDBCloseingBalPreview"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="16"
                android:gravity="right"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold" />
        </TableRow>
    </TableLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:drawable/arrow_up_float" />

    <TableRow
        android:id="@+id/trHeaderDaybookProducts"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@drawable/bluegradient"
        android:orientation="horizontal"
        android:weightSum="10" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="2.5"
            android:ellipsize="end"
            android:gravity="center|center_horizontal"
            android:text="@string/productName"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="top|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.5"
            android:gravity="center|center_horizontal"
            android:text="@string/batchNo"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="Opening Stock"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="@string/return_qty"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:text="Product To Customer"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center_horizontal|center"
            android:text="Products To Factory"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center|center_horizontal"
            android:layout_margin="1dp"
            android:layout_weight="1.2"
            android:gravity="center|center_horizontal"
            android:inputType="none"
            android:text="Closing Stock"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold" />
    </TableRow>

    <ListView
        android:id="@+id/lvDayBookfinalPreview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="48"
        android:background="@drawable/grid_border_blue"
        android:cacheColorHint="@android:color/transparent"
        android:dividerHeight="1dp"
        android:orientation="vertical"
        android:scrollingCache="false" >
    </ListView>

    <LinearLayout
        android:id="@+id/llPreviewBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:layout_weight="12"
        android:background="@drawable/grid_border_yellow"
        android:gravity="center"
        android:padding="2dp"
        android:visibility="visible"
        android:weightSum="1" >

        <Button
            android:id="@+id/btnPreviewBack"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/back"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dip"
            android:layout_weight=".2"
            android:background="@drawable/button_blue"
            android:gravity="center"
            android:text="@string/save"
            android:textColor="@drawable/text_color_selection"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>