            android:gravity="center"
            android:hint="@string/bonus_reason"
            android:inputType="text"
            android:padding="5dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:imeOptions="actionDone"/>
