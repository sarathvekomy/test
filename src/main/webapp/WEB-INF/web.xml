<web-app version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<context-param>
		<param-name>webAppRootKey</param-name>
		<param-value>VBOOKS</param-value>
	</context-param>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:/vbooks-hibernate.xml
			/WEB-INF/vbooks-security.xml
			/WEB-INF/vbooks-pages.xml
		</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>
	<!-- <listener>
		<listener-class>com.vekomy.vbooks.listener.ScheduleJobListener</listener-class>
	</listener> -->
	<filter>
		<filter-name>springSecurityFilterChain</filter-name>
		<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>springSecurityFilterChain</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>vbooks</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.json</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.html</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.pdf</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.csv</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.xls</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>vbooks</servlet-name>
		<url-pattern>*.form</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
	</welcome-file-list>
	
	<!-- Image Servlet -->
	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>net.sf.jasperreports.j2ee.servlets.ImageServlet</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>image</servlet-name>
		<url-pattern>/images</url-pattern>

	</servlet-mapping>
	
	<!-- File Upload Servlet -->
	<servlet>
		<servlet-name>FileUploadServlet</servlet-name>
		<servlet-class>com.vekomy.vbooks.util.FileUploadServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileUploadServlet</servlet-name>
		<url-pattern>/uploadservlet</url-pattern>
	</servlet-mapping>

	<!-- The queue browse servlet -->
	<servlet>
		<servlet-name>CustomQueueBrowseServlet</servlet-name>
		<servlet-class>com.vekomy.vbooks.util.CustomQueueBrowseServlet</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>CustomQueueBrowseServlet</servlet-name>
		<url-pattern>/queueBrowse</url-pattern>
	</servlet-mapping>
	
	<!-- File Download Servlet -->
	<servlet>
		<servlet-name>FileDownloadServlet</servlet-name>
		<servlet-class>com.vekomy.vbooks.util.FileDownloadServlet</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>FileDownloadServlet</servlet-name>
		<url-pattern>/downloadServlet</url-pattern>
	</servlet-mapping>
</web-app>
