	<bean id="alertScheduler" class="com.vekomy.vbooks.alerts.manager.AlertScheduler"/>
	
	<bean id="timerTaskFactoryBean" class="org.springframework.scheduling.timer.MethodInvokingTimerTaskFactoryBean">
		<property name="targetObject" ref="alertScheduler"/>
		<property name="targetMethod" value="execute"/>
	</bean>
	
	<bean id="scheduledTimerTask" class="org.springframework.scheduling.timer.ScheduledTimerTask">
		<property name="period" value="43200000"/>
		<property name="timerTask" ref="timerTaskFactoryBean"/>
	</bean>
	
	<bean class="org.springframework.scheduling.timer.TimerFactoryBean">
		<property name="scheduledTimerTasks">
			<list>
				<ref local="scheduledTimerTask"/>
			</list>
		</property>
	</bean>
